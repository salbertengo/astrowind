---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Activos',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Servicios"
    title="Control de Inventarios y Gestión de Activos"
    subtitle="Soluciones inteligentes para la gestión eficiente de sus recursos empresariales. Automatice sus procesos de control de inventario y optimice su cadena de suministro con tecnología de vanguardia."
    actions={[
      { 
        variant: 'primary', 
        text: 'Solicitar Demo', 
        href: '/contacto' 
      },
      {
        variant: 'secondary',
        text: 'Conocer Más',
        href: '#beneficios'
      }
    ]}
    image={{
      src: '/img/services/inventory.webp',
      alt: 'Control de Inventarios'
    }}
  />

  <Features2
    id="beneficios"
    title="Beneficios de nuestro sistema de gestión"
    subtitle="Descubra cómo nuestra solución puede transformar su control de inventarios"
    columns={3}
    items={[
      {
        title: 'Ahorro de Tiempo',
        description: 'Elimine procesos manuales y automatice la gestión de inventarios, permitiendo que su equipo se enfoque en actividades más productivas.',
        icon: 'tabler:clock'
      },
      {
        title: 'Mayor Precisión',
        description: 'Reduzca errores humanos mediante la automatización y mantenga un control preciso de sus activos en tiempo real.',
        icon: 'tabler:chart-dots'
      },
      {
        title: 'Cumplimiento Normativo',
        description: 'Mantenga el cumplimiento con las agencias reguladoras y genere informes detallados automáticamente.',
        icon: 'tabler:clipboard-check'
      },
      {
        title: 'Optimización de Recursos',
        description: 'Mejore su rentabilidad mediante un uso más eficiente de sus recursos y una gestión optimizada del inventario.',
        icon: 'tabler:chart-arrows'
      },
      {
        title: 'Análisis Avanzado',
        description: 'Acceda a análisis de datos detallados para realizar proyecciones precisas y tomar decisiones informadas.',
        icon: 'tabler:chart-pie'
      },
      {
        title: 'Mejor Servicio',
        description: 'Mantenga a sus clientes satisfechos con un servicio más eficiente y tiempos de entrega precisos.',
        icon: 'tabler:users'
      }
    ]}
  />

  <Content
    isReversed
    items={[
      {
        title: 'Automatización Inteligente',
        description: 'Implementamos sistemas automatizados que eliminan la necesidad de conteos manuales y reducen errores humanos.',
        icon: 'tabler:robot'
      },
      {
        title: 'Trazabilidad Completa',
        description: 'Seguimiento detallado de cada activo, desde su adquisición hasta su disposición final.',
        icon: 'tabler:timeline'
      },
      {
        title: 'Integración Total',
        description: 'Nuestras soluciones se integran perfectamente con sus sistemas existentes de ERP y gestión empresarial.',
        icon: 'tabler:puzzle'
      }
    ]}
    image={{
      src: '/img/services/inventory-management.webp',
      alt: 'Gestión de Inventarios'
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Solución Integral de Control de Activos
      </h3>
    </Fragment>
  </Content>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Comenzar Ahora',
        href: '/contacto',
      }
    ]}
    title="Transforme su gestión de inventarios"
    subtitle="Descubra cómo podemos ayudarle a optimizar sus procesos de control de activos y mejorar la eficiencia de su empresa."
  />
</Layout>