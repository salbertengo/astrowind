<script>
  // Función para el deslizador de antes/después
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.getElementById('slider');
    const afterLayer = document.getElementById('after-layer');
    let isDown = false;
    
    if (slider && afterLayer) {
      // Inicializar al 80%
      slider.style.left = '80%';
      afterLayer.style.clipPath = 'inset(0 20% 0 0)';
      
      // Funciones para manejar el arrastre del deslizador
      function handleMouseDown(e) {
        isDown = true;
      }
      
      function handleMouseMove(e) {
        if (!isDown) return;
        
        // Calcular la posición relativa dentro del contenedor padre
        const container = slider.parentElement;
        const rect = container.getBoundingClientRect();
        let x = e.clientX - rect.left;
        
        // Limitar el rango de movimiento dentro del contenedor
        if (x < 0) x = 0;
        if (x > rect.width) x = rect.width;
        
        // Actualizar la posición del deslizador
        const percent = (x / rect.width) * 100;
        slider.style.left = `${percent}%`;
        
        // Actualizar la revelación de la capa "después"
        afterLayer.style.clipPath = `inset(0 ${100 - percent}% 0 0)`;
      }
      
      function handleMouseUp() {
        isDown = false;
      }
      
      // Agregar event listeners
      slider.addEventListener('mousedown', handleMouseDown);
      document.addEventListener('mousemove', handleMouseMove);
      document.addEventListener('mouseup', handleMouseUp);
      
      // Soporte para dispositivos táctiles
      slider.addEventListener('touchstart', (e) => {
        isDown = true;
      }, { passive: true });
      
      document.addEventListener('touchmove', (e) => {
        if (!isDown) return;
        const touch = e.touches[0];
        const container = slider.parentElement;
        const rect = container.getBoundingClientRect();
        let x = touch.clientX - rect.left;
        
        if (x < 0) x = 0;
        if (x > rect.width) x = rect.width;
        
        const percent = (x / rect.width) * 100;
        slider.style.left = `${percent}%`;
        afterLayer.style.clipPath = `inset(0 ${100 - percent}% 0 0)`;
      }, { passive: true });
      
      document.addEventListener('touchend', () => {
        isDown = false;
      }, { passive: true });
    }
  });
</script>
